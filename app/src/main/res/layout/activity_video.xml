<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_video">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Todos podemos gritar Raauuuul:vvv"
            android:textSize="24dp"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/rep_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Reproducir Audio"
            />
        <Button
            android:id="@+id/rep_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Reproducir video"
            />
        <SurfaceView
            android:id="@+id/reproducir_video"
            android:layout_width="290dp"
            android:layout_height="190dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

</RelativeLayout>